{
  "additionalProperties": false,
  "definitions": {
    "lsp-diagnostic": {
      "properties": {
        "additionalProperties": false,
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "range": {
          "$ref": "#/definitions/meta-bundle"
        },
        "severity": {
          "type": "number",
          "enum": [1,2,3,4]
        },
        "source": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "lsp-code-action": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title"],
      "properties": {
        "title": {"type": "string"},
        "kind": {"type": "string"},
        "diagnostics": {
          "type": "array",
          "items": {"$ref": "#/definitions/lsp-diagnostic"}
        },
        "edit": {"$ref": "#/definitions/lsp-workspace-edit"}
      }
    },
    "lsp-workspace-edit": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "changes": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/lsp-text-edit"
              }
            }
          }
        }
      }
    },
    "lsp-text-edit": {
      "type": "object",
      "properties": {
        "range": {
          "$ref": "#/lsp-range"
        },
        "newText": {
          "type": "string"
        }
      }
    },
    "lsp-pos": {
      "properties": {
        "character": {
          "type": "number"
        },
        "line": {
          "type": "number"
        }
      }
    },
    "lsp-range": {
      "properties": {
        "end": {
          "$ref": "#/definitions/lsp-pos"
        },
        "start": {
          "$ref": "#/definitions/lsp-pos"
        }
      }
    },
    "meta-bundle": {
      "patternProperties": {
        ".*/.*": {
          "patternProperties": {
            ".*": {
              "type": "object"
            }
          },
          "type": "object"
        }
      }
    },
    "annotation-bundle": {
      "patternProperties": {
        ".*/.*": {
          "type": "object",
          "properties": {
            "code_actions": {
              "type": "array",
              "items": {"$ref": "#/definitions/lsp-code-action"}
            },
            "diagnostics": {
              "type": "array",
              "items": {"$ref": "#/definitions/lsp-diagnostic"}
            }
          }
        }
      }
    }
  },
  "properties": {
    "cell_id": {"type": "string"},
    "metadata": {"$ref": "#/definitions/meta-bundle"},
    "annotations": {"$ref": "#/definitions/annotation-bundle"},
    "request_id": {"type": "number"}
  },
  "type": "object"
}
